{% extends "layout.html.twig" %}

{% block title %}Projects{% endblock %}

{% block content %}
<div class="content">
{% for project in projects %}
    {% if loop.first %}
        <h2>Projects</h2>
        <div class="row row-cols-1 row-cols-md-2 g-4">
    {% endif %}

    <div class="col">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{ project.name }}</h5>
                <p class="card-text">
                    {% if project.description %}{{ project.description|commonmark }}<br>{% endif %}
                    Releases: {{ project.release_count }}<br>
                    Downloads: {{ project.total_downloads }}
                </p>
                <a href="{{ url_for('releases', {project_slug: project.slug}) }}" class="card-link">
                    Releases <span class="visually-hidden">for {{ project.name }}</span>
                </a>
            </div>
        </div>
    </div>


    {% if loop.last %}
        </div>
    {% endif %}
{% else %}
No projects published yet. Check back later.
{% endfor %}
</div>
{% endblock %}
